* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Arial', sans-serif;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.container {
  max-width: 800rpx;
  margin: 0 auto;
  background-color: white;
  padding: 30rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

h1 {
  text-align: center;
  color: #333;
  margin-bottom: 30rpx;
}

.section {
  margin-bottom: 30rpx;
}

h2 {
  color: #555;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.employee-input {
  display: flex;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.employee-input input {
  flex: 1;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.shift-types {
  display: flex;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.shift-types label {
  display: flex;
  align-items: center;
  gap: 5rpx;
  padding: 8rpx 15rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  cursor: pointer;
}

button {
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.1);
}

button:hover {
  background-color: #45a049;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.15);
  transform: translateY(-1rpx);
}

button:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 3rpx rgba(0,0,0,0.1);
}

button[style*="background-color: #2196F3"] {
  background-color: #2196F3;
}

button[style*="background-color: #2196F3"]:hover {
  background-color: #1976D2;
}

.schedule-container {
  overflow-x: auto;
}

table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  margin-top: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

table th:first-child {
  border-top-left-radius: 8rpx;
}

table th:last-child {
  border-top-right-radius: 8rpx;
}

table tr:last-child td:first-child {
  border-bottom-left-radius: 8rpx;
}

table tr:last-child td:last-child {
  border-bottom-right-radius: 8rpx;
}

table th, table td {
  border: 1rpx solid #e0e0e0;
  border-right: none;
  border-bottom: none;
}

table th:last-child, table td:last-child {
  border-right: 1rpx solid #e0e0e0;
}

table tr:last-child th, table tr:last-child td {
  border-bottom: 1rpx solid #e0e0e0;
}

th, td {
  padding: 15rpx;
  text-align: center;
}

th {
  background-color: #f8f9fa;
  font-weight: bold;
}

.diagonal-cell {
  position: relative;
  height: 80rpx;
  width: 80rpx;
}

.diagonal-cell::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, transparent 49%, #666 49%, #666 51%, transparent 51%);
  z-index: 1;
}

.diagonal-name {
  position: absolute;
  bottom: 15rpx;
  left: 15rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  z-index: 2;
  background-color: #f8f9fa;
  padding: 2rpx 4rpx;
  border-radius: 2rpx;
}

.diagonal-date {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  z-index: 2;
  background-color: #f8f9fa;
  padding: 2rpx 4rpx;
  border-radius: 2rpx;
}

.shift-morning {
  background-color: #e3f2fd;
  color: #1565c0;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  box-shadow: 0 1rpx 3rpx rgba(21, 101, 192, 0.1);
  transition: all 0.3s ease;
}

.shift-morning:hover {
  background-color: #bbdefb;
  box-shadow: 0 2rpx 5rpx rgba(21, 101, 192, 0.2);
}

.shift-evening {
  background-color: #fff3e0;
  color: #ef6c00;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  box-shadow: 0 1rpx 3rpx rgba(239, 108, 0, 0.1);
  transition: all 0.3s ease;
}

.shift-evening:hover {
  background-color: #ffe0b2;
  box-shadow: 0 2rpx 5rpx rgba(239, 108, 0, 0.2);
}

.shift-full {
  background-color: #ffebee;
  color: #c62828;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  box-shadow: 0 1rpx 3rpx rgba(198, 40, 40, 0.1);
  transition: all 0.3s ease;
}

.shift-full:hover {
  background-color: #ffcdd2;
  box-shadow: 0 2rpx 5rpx rgba(198, 40, 40, 0.2);
}

.shift-rest {
  background-color: #e8f5e9;
  color: #2e7d32;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  box-shadow: 0 1rpx 3rpx rgba(46, 125, 50, 0.1);
  transition: all 0.3s ease;
}

.shift-rest:hover {
  background-color: #c8e6c9;
  box-shadow: 0 2rpx 5rpx rgba(46, 125, 50, 0.2);
}

.stats {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 4rpx;
}

.stat-item {
  text-align: center;
}

.stat-item .label {
  font-size: 24rpx;
  color: #666;
}

.stat-item .value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}